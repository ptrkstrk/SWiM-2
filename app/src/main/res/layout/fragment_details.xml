<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tagsView"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/details_default_text" app:layout_constraintTop_toBottomOf="@+id/dateView"
            app:layout_constraintStart_toEndOf="@+id/tagsLabel" android:layout_marginStart="@dimen/default_margin"
            android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"/>
    <TextView
            android:text="@string/details_default_text"
            android:layout_width="0dp"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content" android:id="@+id/nameView"
            android:layout_marginTop="@dimen/default_margin" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nameLabel" android:layout_marginStart="@dimen/default_margin"
            android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/details_default_text"
            android:layout_width="0dp"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content" android:id="@+id/dateView"
            app:layout_constraintStart_toEndOf="@+id/dateLabel" android:layout_marginStart="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin" app:layout_constraintTop_toBottomOf="@+id/nameView"
            android:textSize="24sp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/nameTV_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameLabel"
            android:layout_marginTop="@dimen/default_margin" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/default_margin"
            android:textSize="24sp"/>
    <TextView
            android:text="@string/dateTV_label"
            android:layout_width="wrap_content"
            android:layout_height="31dp" android:id="@+id/dateLabel"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/default_margin"
            android:textSize="24sp" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/nameView"/>
    <TextView
            android:text="@string/tagsTV_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tagsLabel"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/dateView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/default_margin" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
