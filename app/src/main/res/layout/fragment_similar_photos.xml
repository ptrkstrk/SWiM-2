<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:paddingBottom="16dp"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline6"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.66666667"/>
    <TextView
            android:text="@string/similar_images_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/similar_photos_label"
            android:textColor="@color/textColor" android:layout_marginEnd="@dimen/similar_photos_margin"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="@dimen/similar_photos_margin"
            app:layout_constraintStart_toStartOf="parent" android:textSize="24sp"
            android:layout_marginTop="@dimen/similar_photos_margin" app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/similar_photos_edge_margin"
            android:layout_marginTop="@dimen/similar_photos_margin"
            app:layout_constraintTop_toBottomOf="@+id/similar_photos_label"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="@dimen/similar_photos_margin"
            android:layout_marginBottom="@dimen/similar_photos_margin"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            android:scaleType="centerCrop" android:adjustViewBounds="true"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/similar_photos_label"
            android:layout_marginTop="@dimen/similar_photos_margin"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" android:layout_marginEnd="@dimen/similar_photos_margin"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="@dimen/similar_photos_margin"
            android:layout_marginBottom="@dimen/similar_photos_margin" app:layout_constraintBottom_toTopOf="@+id/guideline7"
            android:scaleType="centerCrop" android:adjustViewBounds="true"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView3"
            android:layout_marginTop="@dimen/similar_photos_margin"
            app:layout_constraintTop_toBottomOf="@+id/similar_photos_label"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            android:layout_marginStart="@dimen/similar_photos_margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/similar_photos_edge_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" android:layout_marginBottom="@dimen/similar_photos_margin"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/similar_photos_edge_margin"
            android:layout_marginTop="@dimen/similar_photos_margin"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:layout_marginBottom="@dimen/similar_photos_margin"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="@dimen/similar_photos_margin" android:adjustViewBounds="true"
            android:scaleType="centerCrop"
    />
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView5"
            android:layout_marginTop="@dimen/similar_photos_margin"
            app:layout_constraintTop_toTopOf="@+id/guideline7"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="@dimen/similar_photos_margin"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" android:layout_marginEnd="@dimen/similar_photos_margin"
            android:adjustViewBounds="true" android:layout_marginBottom="@dimen/similar_photos_margin"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
    />
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageView6"
            android:layout_marginStart="@dimen/similar_photos_margin"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/similar_photos_edge_margin"
            android:layout_marginTop="@dimen/similar_photos_margin" app:layout_constraintTop_toTopOf="@+id/guideline7"
            android:adjustViewBounds="true" android:layout_marginBottom="@dimen/similar_photos_margin"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.33333334"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline7"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.55"/>
</androidx.constraintlayout.widget.ConstraintLayout>